<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectLocationActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/selectlocation_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#fafafa"
        android:elevation="3dp"
        android:theme="@style/ToolbarColoredBackArrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/reflesh_locations"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_like_reload"
            tools:ignore="RtlHardcoded" />
    </android.support.v7.widget.Toolbar>

    <ListView
        android:id="@+id/locationlist"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/selectlocation_toolbar"
        android:layout_height="wrap_content"
         />
</android.support.constraint.ConstraintLayout>