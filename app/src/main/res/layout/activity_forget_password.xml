<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".SignInActivity"
    tools:layout_editor_absoluteY="25dp"
    android:layout_centerHorizontal="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:visibility="visible">


        <ImageView
            android:id="@+id/forget_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo_white" />

        <TextView
            android:id="@+id/Forget_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/forget_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="Şifre Sıfırlama Kodu Mail Adresinize Gönderilecektir."
            android:textAllCaps="false"
            android:textColor="#d9d9d9"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Forget_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Forget_text1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="Lüffen Mail Adresinizi Giriniz"
            android:textAllCaps="false"
            android:textColor="#e6e6e6"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/forget_mailtext"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/Forget_text2"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/edittext_bg"
            android:elevation="4dp"
            android:ems="10"
            android:hint="Mail Adresi"
            android:inputType="textPersonName"
            android:paddingLeft="25dp"
            android:textColorHint="@color/hintcolor"
            android:textSize="14sp" />



        <Button
            android:id="@+id/forget_send_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/forget_mailtext"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/sign_in_btn_bg"
            android:clickable="true"
            android:elegantTextHeight="false"
            android:text="GÖNDER"
            android:textColor="@android:color/white" />



        <LinearLayout
            android:id="@+id/sign_up_liner"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="31dp"
            android:clickable="true">

            <TextView
                android:id="@+id/sign_in_account_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hesabın yok mu ?"
                android:textColor="@color/hintcolor"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/sign_in_account_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Kayıt Ol."
                android:textColor="@color/hintcolor"
                android:textSize="12sp" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/forget_progress"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/forget_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-80dp"
            android:visibility="invisible" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>